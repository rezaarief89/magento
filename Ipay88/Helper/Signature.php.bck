<?php

namespace Wow\Ipay88\Helper;

require_once('lib/internal/ipay88-php/Ipay88/Signature.php');

class Signature extends \Ipay88_Signature
{

   public function generateSignature($source = null) {
	   
	    $writer = new \Zend_Log_Writer_Stream(BP.'/var/log/reza-test.log');
        $logger = new \Zend_Log();
        $logger->addWriter($writer);
        $logger->info("generateSignature");
        $source = $source ? : $this->getSource();
        $hash = hash_hmac('sha512', $source);
        return $hash;
    }
}
